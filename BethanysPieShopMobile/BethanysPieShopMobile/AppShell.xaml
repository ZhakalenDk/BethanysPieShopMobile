<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BethanysPieShopMobile.AppShell"
             xmlns:pages="clr-namespace:BethanysPieShopMobile.Views"
             Shell.TabBarIsVisible="False">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="PieOverview" Icon="pie.png" ContentTemplate="{DataTemplate pages:PieOverview}" />
        <ShellContent Title="WebPageview" Icon="pie.png" ContentTemplate="{DataTemplate pages:WebPageView}" />
        <ShellContent Title="ContactView" Icon="pie.png" ContentTemplate="{DataTemplate pages:ContactView}" />
        <ShellContent Title="RegisterView" Icon="pie.png" ContentTemplate="{DataTemplate pages:RegisterView}" />
        <ShellContent Title="SettingTableView" Icon="pie.png" ContentTemplate="{DataTemplate pages:SettingsTableView}" />
    </FlyoutItem>
</Shell>